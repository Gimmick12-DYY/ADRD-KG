# Environment Variables for ADRD Knowledge Graph Production Deployment

# Django Settings
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-change-this-in-production-minimum-50-characters
DJANGO_SETTINGS_MODULE=adrd_kg.settings_production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL)
POSTGRES_DB=adrd_kg
POSTGRES_USER=adrd_user
POSTGRES_PASSWORD=secure_database_password_change_me
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Alternative: Database URL format
# DATABASE_URL=postgresql://adrd_user:secure_password@db:5432/adrd_kg

# CORS Settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com,https://www.yourdomain.com

# Security Settings
USE_HTTPS=False  # Set to True when using HTTPS/SSL

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379/1

# Email Configuration (for error notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes

# Logging
LOG_LEVEL=INFO

# Cloud Storage (if using AWS S3, uncomment and configure)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Monitoring and Analytics (optional)
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Backup Configuration (optional)
# BACKUP_ENABLED=True
# BACKUP_S3_BUCKET=your-backup-bucket
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
